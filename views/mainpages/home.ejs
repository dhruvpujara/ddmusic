        <script>
  document.addEventListener("alpine:init", () => {
    Alpine.data("slider", () => ({
      current: 1,
      startX: 0,
      endX: 0,
      interval: null,
      images: <%- JSON.stringify(mixedmodel.map(model => ({ name: model.name, src: model.thumbnail }))) %>,

      start(e) {
        this.startX = e.touches[0].clientX;
        clearInterval(this.interval);
      },
      move(e) {
        this.endX = e.touches[0].clientX;
      },
      end() {
        if (this.startX - this.endX > 50) this.next();
        else if (this.endX - this.startX > 50) this.prev();
        this.startAutoSlide();
      },
      next() {
        this.current = this.current < this.images.length ? this.current + 1 : 1;
      },
      prev() {
        this.current = this.current > 1 ? this.current - 1 : this.images.length;
      },
      startAutoSlide() {
        this.interval = setInterval(() => this.next(), 4000);
      },
      init() {
        this.startAutoSlide();
      }
    }));
  });
</script>



