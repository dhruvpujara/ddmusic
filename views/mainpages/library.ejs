    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library - DDMusic</title>
    <link rel="stylesheet" href="/css/output.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulseGlow {

            0%,
            100% {
                box-shadow: 0 0 0 0 rgba(139, 92, 246, 0);
            }

            50% {
                box-shadow: 0 0 20px 0 rgba(139, 92, 246, 0.3);
            }
        }

        @keyframes shimmer {
            0% {
                background-position: -200% center;
            }

            100% {
                background-position: 200% center;
            }
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-5px);
            }
        }

        .playlist-card {
            animation: fadeInUp 0.6s ease-out forwards;
            opacity: 0;
            animation-delay: calc(var(--delay) * 0.1s);
        }

        .playlist-card:hover .card-bg {
            transform: scale(0.98);
            animation: pulseGlow 2s infinite;
        }

        .playlist-icon {
            transition: all 0.3s ease;
        }

        .playlist-card:hover .playlist-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .theme-purple {
            background: linear-gradient(135deg, #4c1d95 0%, #5b21b6 100%);
        }

        .theme-blue {
            background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
        }

        .theme-pink {
            background: linear-gradient(135deg, #831843 0%, #db2777 100%);
        }

        .theme-green {
            background: linear-gradient(135deg, #065f46 0%, #059669 100%);
        }

        .theme-orange {
            background: linear-gradient(135deg, #7c2d12 0%, #ea580c 100%);
        }

        .theme-indigo {
            background: linear-gradient(135deg, #312e81 0%, #4338ca 100%);
        }

        /* New gradient styles for playlists */
        .gradient-1 {
            background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
        }

        .gradient-2 {
            background: linear-gradient(135deg, #4ECDC4 0%, #56B4D3 100%);
        }

        .gradient-3 {
            background: linear-gradient(135deg, #9B59B6 0%, #8E44AD 100%);
        }

        .gradient-4 {
            background: linear-gradient(135deg, #3498DB 0%, #2980B9 100%);
        }

        .gradient-5 {
            background: linear-gradient(135deg, #2ECC71 0%, #27AE60 100%);
        }

        .gradient-6 {
            background: linear-gradient(135deg, #F1C40F 0%, #F39C12 100%);
        }

        /* Special styles for Shared Playlists button */
        .shared-playlist-btn {
            background: linear-gradient(90deg,
                    #ff0080, #ff8c00, #40e0d0,
                    #20b2aa, #9370db, #ff0080);
            background-size: 400% 400%;
            animation: shimmer 3s ease-in-out infinite, float 3s ease-in-out infinite;
            position: relative;
            overflow: hidden;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .shared-playlist-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg,
                    rgba(255, 255, 255, 0) 0%,
                    rgba(255, 255, 255, 0.2) 50%,
                    rgba(255, 255, 255, 0) 100%);
            transform: translateX(-100%);
            animation: shine 2s infinite;
        }

        @keyframes shine {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(100%);
            }
        }

        .shared-playlist-btn:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 30px rgba(255, 105, 180, 0.3),
                0 0 40px rgba(255, 20, 147, 0.2);
        }

        .shared-playlist-btn:active {
            transform: scale(0.98);
        }

        .shared-icon {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
                opacity: 1;
            }

            50% {
                transform: scale(1.2);
                opacity: 0.8;
            }
        }
    </style>
</head>

<body class="bg-black min-h-screen flex flex-col">
    <!-- Header -->
    <header class="fixed top-0 w-full bg-black/90 backdrop-blur-lg z-50 px-4 py-3 border-b border-gray-800">
        <div class="flex justify-between items-center">
            <h1 class="text-xl font-bold text-white">Your Library</h1>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 mt-16 mb-32 px-4">
        <% if (!isLoggedIn) { %>
            <div class="h-[80vh] flex flex-col items-center justify-center">
                <div class="text-center space-y-4">
                    <i class="fas fa-lock text-4xl text-gray-500"></i>
                    <h2 class="text-2xl font-bold text-white">Login Required</h2>
                    <p class="text-gray-400">Please login to access your library</p>
                    <a href="/login"
                        class="inline-block bg-gradient-to-r from-purple-600 to-blue-600 px-8 py-3 rounded-lg text-white mt-4">
                        Login to Continue
                    </a>
                </div>
            </div>
            <% } else { %>
                <!-- Liked Songs Section -->
                <section class="py-4">
                    <a href="/likedsongs" class="block">
                        <div
                            class="flex items-center space-x-4 bg-gradient-to-r from-purple-600 to-blue-600 p-4 rounded-lg">
                            <div class="w-16 h-16 bg-black/30 rounded-lg flex items-center justify-center">
                                <i class="fas fa-thumbs-up text-2xl text-white"></i>
                            </div>
                            <div>
                                <h2 class="text-white text-lg font-bold">Liked Songs</h2>
                                <p class="text-gray-200 text-sm">
                                    <%= likedSongsCount %> songs
                                </p>
                            </div>
                        </div>
                    </a>
                </section>

                <!-- Disliked Songs Section -->
                <section class="py-4">
                    <a href="/dislikedsongs" class="block">
                        <div
                            class="flex items-center space-x-4 bg-gradient-to-r from-red-600 to-pink-600 p-4 rounded-lg">
                            <div class="w-16 h-16 bg-black/30 rounded-lg flex items-center justify-center">
                                <i class="fas fa-thumbs-down text-2xl text-white"></i>
                            </div>
                            <div>
                                <h2 class="text-white text-lg font-bold">Disliked Songs</h2>
                                <p class="text-gray-200 text-sm">
                                    <%= dislikedSongsCount %> songs
                                </p>
                            </div>
                        </div>
                    </a>
                </section>

                <!-- SHARED PLAYLISTS SECTION (NEW) -->
                <section class="py-4">
                    <a href="/shared/playlist" class="block">
                        <div
                            class="shared-playlist-btn flex items-center space-x-4 p-4 rounded-xl transition-all duration-300">
                            <div
                                class="w-16 h-16 bg-white/10 rounded-lg flex items-center justify-center backdrop-blur-sm">
                                <i class="fas fa-users text-2xl text-white shared-icon"></i>
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between items-center">
                                    <h2 class="text-white text-lg font-bold">Shared Playlists</h2>
                                    <i class="fas fa-external-link-alt text-white/70"></i>
                                </div>
                                <p class="text-white/80 text-sm mt-1">
                                    Discover playlists shared by friends & community
                                </p>
                                <div class="flex items-center mt-2 space-x-2">
                                    <span class="px-2 py-1 bg-white/20 rounded-full text-xs text-white">
                                        <i class="fas fa-users mr-1"></i> Community
                                    </span>
                                    <span class="px-2 py-1 bg-white/20 rounded-full text-xs text-white">
                                        <i class="fas fa-fire mr-1"></i> Trending
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </section>

                <!-- Playlists Section -->
                <section class="py-4">
                    <div class="mb-3">
                        <h2 class="text-white text-lg font-semibold">Your Playlists</h2>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <% if (playlists && playlists.length> 0) { %>
                            <% playlists.forEach((playlist, index)=> { %>
                                <div class="rounded-lg relative">
                                    <a href="/playlist/<%= playlist._id %>">
                                        <div
                                            class="aspect-square <%= `gradient-${(index % 6) + 1}` %> rounded-lg mb-3 p-4 flex flex-col justify-between hover:scale-[0.98] transition-transform">
                                            <i class="fas fa-music text-2xl text-white/60"></i>
                                            <div>
                                                <h3 class="text-white font-medium truncate">
                                                    <%= playlist.name %>
                                                </h3>
                                                <div class="flex justify-between items-center mt-1">
                                                    <p class="text-white/80 text-sm">
                                                        <%= playlist.songs.length %> songs
                                                    </p>
                                                    <form action="/delete-playlist/<%= playlist._id %>" method="POST"
                                                        class="inline-block"
                                                        onsubmit="return confirm('Are you sure you want to delete this playlist?')">
                                                        <button type="submit" class="w-8 h-8 rounded-full bg-black/20 hover:bg-black/30 
                                                                   flex items-center justify-center transition-all 
                                                                   active:scale-95">
                                                            <i class="fas fa-trash text-white/80 text-sm"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="col-span-2 text-center py-8 text-gray-500">
                                            <p>No playlists yet</p>
                                        </div>
                                        <% } %>
                    </div>
                </section>
                <% } %>
    </main>

    <%- include('../partials/miniplayer') %>

        <!-- Bottom Navigation -->
        <nav class="fixed bottom-0 left-0 right-0 w-full bg-black/90 backdrop-blur-lg border-t border-gray-800 z-50">
            <div class="flex justify-around py-3">
                <a href="/" class="text-gray-400 flex flex-col items-center">
                    <i class="fas fa-home"></i>
                    <span class="text-xs mt-1">Home</span>
                </a>
                <a href="/explore" class="text-gray-400 flex flex-col items-center">
                    <i class="fas fa-compass"></i>
                    <span class="text-xs mt-1">Explore</span>
                </a>
                <a href="/library" class="text-white flex flex-col items-center">
                    <i class="fas fa-heart"></i>
                    <span class="text-xs mt-1">Library</span>
                </a>
                <a href="/profile" class="text-gray-400 flex flex-col items-center">
                    <i class="fas fa-user"></i>
                    <span class="text-xs mt-1">Profile</span>
                </a>
            </div>
        </nav>

        <!-- Optional: Add a simple JavaScript for extra interactivity -->
        <script>
            // Add hover effect for shared playlist button
            document.addEventListener('DOMContentLoaded', function () {
                const sharedBtn = document.querySelector('.shared-playlist-btn');

                if (sharedBtn) {
                    // Add click feedback
                    sharedBtn.addEventListener('mousedown', function () {
                        this.style.transform = 'scale(0.98)';
                    });

                    sharedBtn.addEventListener('mouseup', function () {
                        this.style.transform = 'scale(1.02)';
                    });

                    sharedBtn.addEventListener('mouseleave', function () {
                        this.style.transform = 'scale(1)';
                    });
                }
            });
        </script>
</body>

</html>