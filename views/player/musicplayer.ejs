            }
        });
    </script>

    <script>
        let wakeLock = null;

        async function enableWakeLock() {
            try {
                if ("wakeLock" in navigator) {
                    wakeLock = await navigator.wakeLock.request("screen");
                    sessionStorage.setItem("wakelock", "true");
                    console.log("Wake Lock is active");

                    wakeLock.addEventListener("release", () => {
                        console.log("Wake Lock released by system");
                    });
                } else {
                    console.warn("Wake Lock API not supported in this browser");
                }
            } catch (err) {
                console.error(`Wake Lock error: ${err.name}, ${err.message}`);
            }
        }

        function disableWakeLock() {
            if (wakeLock) {
                wakeLock.release();
                wakeLock = null;
            }
            sessionStorage.removeItem("wakelock");
            console.log("Wake Lock manually released");
        }

        // Init toggle state on load
        document.addEventListener("DOMContentLoaded", () => {
            const toggle = document.getElementById("wakelock-toggle");

            if (!toggle) return;

            // Restore state if previously enabled
            if (sessionStorage.getItem("wakelock") === "true") {
                toggle.checked = true;
                enableWakeLock();
            }

            // Toggle listener
            toggle.addEventListener("change", () => {
                if (toggle.checked) {
                    enableWakeLock();
                } else {
                    disableWakeLock();
                }
            });
        });

        // Reacquire if tab is hidden and comes back
        document.addEventListener("visibilitychange", async () => {
            if (wakeLock !== null && document.visibilityState === "visible") {
                wakeLock = await navigator.wakeLock.request("screen");
                console.log("Wake Lock re-acquired after visibility change");
            }
        });
    </script>

