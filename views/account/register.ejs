<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - DDMusic</title>
    <link rel="stylesheet" href="/css/output.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .otp-input {
            width: 45px;
            height: 45px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            border: 2px solid #8B5CF6;
            border-radius: 8px;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            margin: 0 5px;
            transition: all 0.2s;
        }

        .otp-input:focus {
            outline: none;
            border-color: #3B82F6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
            transform: scale(1.05);
        }

        .otp-input.filled {
            background-color: rgba(139, 92, 246, 0.2);
        }

        .otp-container {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 10px;
        }

        #otpSection {
            transition: all 0.3s ease;
        }
    </style>
</head>

<body class="bg-black min-h-screen flex flex-col items-center justify-center p-4">
    <!-- Register Container -->
    <div class="w-full max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-white mb-2">DDMusic</h1>
            <p class="text-gray-400">Your music, anywhere.</p>
        </div>

        <!-- Register Form -->
        <div class="bg-gray-900/50 backdrop-blur-lg rounded-xl p-6">
            <% if (locals.error) { %>
                <div class="mb-4 px-3 py-2 bg-red-950/30 rounded-lg">
                    <p class="text-white text-lg font-semibold">
                        <%= error %>
                    </p>
                </div>
                <% } %>

                    <!-- Main form for registration -->
                    <form id="registerForm" class="space-y-4" method="post" action="/registered">
                        <!-- Username -->
                        <div>
                            <label for="username" class="block text-sm font-medium text-gray-400 mb-1">Username</label>
                            <input type="text" id="username" name="username" required
                                class="w-full px-4 py-3 bg-black/50 border border-gray-800 rounded-lg text-white focus:outline-none focus:border-purple-500">
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                            <div class="flex space-x-2">
                                <input type="email" id="email" name="email" required
                                    class="flex-1 px-4 py-3 bg-black/50 border border-gray-800 rounded-lg text-white focus:outline-none focus:border-purple-500">
                                <button type="button" id="sendCodeBtn"
                                    class="px-4 py-2 bg-gradient-to-r from-purple-600 to-blue-500 text-white rounded-lg font-medium hover:opacity-90 transition-opacity whitespace-nowrap text-sm h-auto">
                                    Send Code
                                </button>
                            </div>
                        </div>

                        <!-- Password -->
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-400 mb-1">Password</label>
                            <input type="password" id="password" name="password" required
                                class="w-full px-4 py-3 bg-black/50 border border-gray-800 rounded-lg text-white focus:outline-none focus:border-purple-500">
                        </div>

                        <!-- Hidden OTP Field (will store the complete OTP) -->
                        <input type="hidden" id="verificationCode" name="verificationCode">

                        <!-- OTP Input Section (initially hidden) -->
                        <div id="otpSection" class="hidden">
                            <label class="block text-sm font-medium text-gray-400 mb-1">Verification Code</label>
                            <div class="otp-container" id="otpContainer">
                                <!-- OTP inputs will be generated here -->
                            </div>
                            <p class="text-xs text-gray-400 text-center mt-2">Enter the 5-digit code sent to your email
                            </p>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="flex items-center">
                            <input type="checkbox" id="terms" name="terms" class="mr-2" required>
                            <label for="terms" class="text-sm text-gray-400">
                                I agree to the
                                <a href="/terms" class="text-purple-500 hover:text-purple-400">Terms and Conditions</a>
                            </label>
                        </div>

                        <!-- Register Button (initially disabled) -->
                        <button type="submit" id="registerBtn" disabled
                            class="w-full bg-gradient-to-r from-gray-700 to-gray-600 text-gray-300 py-3 rounded-lg font-medium cursor-not-allowed transition-all duration-300 relative">
                            <span id="btnText">Verify Email to Continue</span>
                            <div id="loadingSpinner"
                                class="hidden absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                                <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg"
                                    fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor"
                                        stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                    </path>
                                </svg>
                            </div>
                        </button>
                    </form>
        </div>

        <!-- Login Link -->
        <div class="text-center mt-6">
            <p class="text-gray-400">
                Already have an account?
                <a href="/login" class="text-purple-500 hover:text-purple-400">Sign in</a>
            </p>
        </div>
    </div>

    <script>
        let verificationCode = '';
        let isVerificationSent = false;
        let resendTimer = null;
        let countdownSeconds = 60;

        // Generate OTP input boxes
        function generateOtpInputs() {
            const container = document.getElementById('otpContainer');
            container.innerHTML = '';

            for (let i = 0; i < 5; i++) {
                const input = document.createElement('input');
                input.type = 'text';
                input.inputMode = 'numeric';
                input.maxLength = 1;
                input.className = 'otp-input';
                input.dataset.index = i;

                input.addEventListener('input', function (e) {
                    const value = e.target.value;

                    // Only allow numbers
                    if (!/^\d*$/.test(value)) {
                        e.target.value = '';
                        return;
                    }

                    if (value.length === 1) {
                        e.target.classList.add('filled');

                        // Move to next input
                        const nextIndex = parseInt(e.target.dataset.index) + 1;
                        if (nextIndex < 5) {
                            const nextInput = container.querySelector(`[data-index="${nextIndex}"]`);
                            if (nextInput) nextInput.focus();
                        }
                    } else {
                        e.target.classList.remove('filled');
                    }

                    // Update hidden verification code field
                    updateVerificationCode();
                });

                input.addEventListener('keydown', function (e) {
                    // Handle backspace
                    if (e.key === 'Backspace') {
                        if (e.target.value === '') {
                            // Move to previous input
                            const prevIndex = parseInt(e.target.dataset.index) - 1;
                            if (prevIndex >= 0) {
                                const prevInput = container.querySelector(`[data-index="${prevIndex}"]`);
                                if (prevInput) {
                                    prevInput.value = '';
                                    prevInput.classList.remove('filled');
                                    prevInput.focus();
                                }
                            }
                        } else {
                            e.target.value = '';
                            e.target.classList.remove('filled');
                        }
                        updateVerificationCode();
                    }

                    // Handle arrow keys
                    if (e.key === 'ArrowLeft') {
                        const prevIndex = parseInt(e.target.dataset.index) - 1;
                        if (prevIndex >= 0) {
                            const prevInput = container.querySelector(`[data-index="${prevIndex}"]`);
                            if (prevInput) prevInput.focus();
                        }
                    }
                    if (e.key === 'ArrowRight') {
                        const nextIndex = parseInt(e.target.dataset.index) + 1;
                        if (nextIndex < 5) {
                            const nextInput = container.querySelector(`[data-index="${nextIndex}"]`);
                            if (nextInput) nextInput.focus();
                        }
                    }
                });

                container.appendChild(input);
            }

            // Focus first input
            setTimeout(() => {
                const firstInput = container.querySelector('[data-index="0"]');
                if (firstInput) firstInput.focus();
            }, 100);
        }

        // Update hidden verification code field
        function updateVerificationCode() {
            const container = document.getElementById('otpContainer');
            const inputs = container.querySelectorAll('.otp-input');
            let code = '';

            inputs.forEach(input => {
                code += input.value;
            });

            verificationCode = code;
            document.getElementById('verificationCode').value = code;

            // Enable submit button if all 5 digits are filled
            const registerBtn = document.getElementById('registerBtn');
            if (code.length === 5 && isVerificationSent) {
                registerBtn.disabled = false;
                registerBtn.className = 'w-full bg-gradient-to-r from-purple-600 to-blue-500 text-white py-3 rounded-lg font-medium hover:opacity-90 transition-opacity relative';
                document.getElementById('btnText').textContent = 'Create Account';
            } else {
                registerBtn.disabled = true;
                registerBtn.className = 'w-full bg-gradient-to-r from-gray-700 to-gray-600 text-gray-300 py-3 rounded-lg font-medium cursor-not-allowed transition-all duration-300 relative';
                document.getElementById('btnText').textContent = 'Verify Email to Continue';
            }
        }

        // Send verification code functionality
        document.getElementById('sendCodeBtn').addEventListener('click', async function () {
            const form = document.getElementById('registerForm');
            const formData = new FormData(form);

            // Convert FormData to object
            const formDataObj = {};
            formData.forEach((value, key) => {
                formDataObj[key] = value;
            });

            // Validate email
            const email = formDataObj.email;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            if (!email || !emailRegex.test(email)) {
                alert('Please enter a valid email address');
                document.getElementById('email').focus();
                return;
            }

            // Validate username
            if (!formDataObj.username) {
                alert('Please enter a username');
                document.getElementById('username').focus();
                return;
            }

            // Validate password
            if (!formDataObj.password) {
                alert('Please enter a password');
                document.getElementById('password').focus();
                return;
            }

            // Disable button and show loading
            const btn = this;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';

            try {
                // Send AJAX request to /verify/email with ALL form data
                const response = await fetch('/verify/email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(formDataObj)
                });

                // Check if response is JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('Server returned non-JSON:', text.substring(0, 200));
                    throw new Error(`Server error: ${response.status} ${response.statusText}`);
                }

                const data = await response.json();

                if (data.success) {
                    // Show OTP section
                    document.getElementById('otpSection').classList.remove('hidden');
                    generateOtpInputs();
                    isVerificationSent = true;

                    // Start countdown timer
                    startCountdown(btn);

                    // Show success message
                    const emailDisplay = email.length > 20 ? email.substring(0, 17) + '...' : email;
                    alert(`Verification code sent to ${emailDisplay}`);
                } else {
                    // Handle error response
                    throw new Error(data.message || 'Failed to send verification code');
                }
            } catch (error) {
                // Re-enable button on error
                btn.disabled = false;
                btn.innerHTML = 'Send Code';
                alert(`Error: ${error.message}`);
                console.error('Fetch error:', error);
            }
        });

        // Countdown timer for resend button
        function startCountdown(btn) {
            clearInterval(resendTimer);
            countdownSeconds = 60;

            resendTimer = setInterval(() => {
                countdownSeconds--;
                if (countdownSeconds > 0) {
                    btn.innerHTML = `Resend in ${countdownSeconds}s`;
                } else {
                    clearInterval(resendTimer);
                    btn.disabled = false;
                    btn.innerHTML = 'Resend Code';
                }
            }, 1000);
        }

        // Main form submission for registration
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            const form = this;
            const registerBtn = document.getElementById('registerBtn');
            const btnText = document.getElementById('btnText');
            const spinner = document.getElementById('loadingSpinner');

            // Validate form before submission
            if (form.checkValidity()) {
                // Check if verification was sent
                if (!isVerificationSent) {
                    e.preventDefault();
                    alert('Please request a verification code first');
                    document.getElementById('sendCodeBtn').focus();
                    return;
                }

                // Check if verification code is complete
                if (verificationCode.length !== 5) {
                    e.preventDefault();
                    alert('Please enter the complete 5-digit verification code');
                    const firstEmptyInput = document.querySelector('.otp-input:empty');
                    if (firstEmptyInput) {
                        firstEmptyInput.focus();
                    } else {
                        document.querySelector('.otp-input').focus();
                    }
                    return;
                }

                // Disable button and show spinner
                registerBtn.disabled = true;
                btnText.classList.add('invisible');
                spinner.classList.remove('hidden');

                // Form will submit to /registered
            } else {
                e.preventDefault();
                alert('Please fill all required fields correctly');
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function () {
            // Disable submit button initially
            const registerBtn = document.getElementById('registerBtn');
            registerBtn.disabled = true;
        });
    </script>
</body>

</html>