<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oldies - DDMusic</title>
    <link rel="stylesheet" href="/css/output.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .song-item {
            animation: fadeInUp 0.5s ease-out forwards;
            animation-delay: calc(var(--index) * 0.1s);
            opacity: 0;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-slate-900 via-gray-900 to-black min-h-screen text-white">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 bg-black/20 backdrop-blur-sm z-50">
        <div class="container mx-auto px-4 py-4">
            <a href="/" class="inline-flex items-center text-white/80 hover:text-white transition-colors">
                <i class="fas fa-caret-left text-xl mr-2"></i>
                <span>Back</span>
            </a>
        </div>
    </header>

    <div class="container mx-auto px-4 py-8 max-w-5xl pt-20">
        <h1 class="text-5xl font-bold mb-12 text-center bg-gradient-to-r from-amber-400 via-yellow-400 to-orange-400 bg-clip-text text-transparent animate-pulse">
            Retro Classics
        </h1>
        <div class="space-y-2">
            <% songs.forEach((song, index) => { %>
                <form action="/player" method="POST" class="w-full">
                    <input type="hidden" name="songLink" value="<%= song.link %>">
                    <input type="hidden" name="songName" value="<%= song.name %>">
                    <input type="hidden" name="objectId" value="<%= song._id %>">
                    <button type="submit" class="w-full song-item bg-gradient-to-r from-gray-800/30 via-gray-800/40 to-gray-800/30 backdrop-blur-sm rounded-lg p-4 flex items-center justify-between hover:bg-gradient-to-r hover:from-amber-900/40 hover:via-yellow-900/40 hover:to-orange-900/40 transition-all duration-500 transform hover:scale-[1.01] hover:shadow-lg hover:shadow-amber-500/10"
                        style="--index: <%= index %>">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-gradient-to-br from-amber-400 via-yellow-400 to-orange-400 rounded-lg flex items-center justify-center transform rotate-0 group-hover:rotate-12 transition-transform duration-300">
                                <i class="fas fa-music text-lg text-white/90"></i>
                            </div>
                            <h3 class="text-base font-medium text-white/90 text-left"><%= song.name %></h3>
                        </div>
                        <div class="w-8 h-8 bg-white/5 rounded-full flex items-center justify-center transition-all duration-300 group-hover:scale-110">
                            <i class="fas fa-play text-amber-400 group-hover:text-amber-300 text-sm"></i>
                        </div>
                    </button>
                </form>
            <% }); %>
        </div>
    </div>
</body>
</html>