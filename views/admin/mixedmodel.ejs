<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Upload Artist</title>
  <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gradient-to-br from-gray-900 via-black to-gray-900 min-h-screen text-white p-4 md:p-8 font-['Poppins']">
  <div class="max-w-4xl mx-auto mb-12">
    <div class="bg-black/40 backdrop-blur-lg p-4 md:p-8 rounded-2xl shadow-xl border border-gray-800">
      <h1 class="text-3xl font-bold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500">
        Upload person</h1>

      <!-- Add enctype="multipart/form-data" for file upload -->
      <form action="/admin/upload-mixedmodel" method="POST" enctype="multipart/form-data" class="space-y-6">
        <div class="space-y-4">
          <!-- Artist Name -->
          <div class="group">
            <label class="block mb-2 text-sm font-medium text-gray-300">person Name</label>
            <input type="text" name="name" required class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                          text-white transition-all duration-300
                          focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                          hover:border-gray-600">
          </div>

          <!-- Hashtags -->
          <div class="group">
            <label class="block mb-2 text-sm font-medium text-gray-300">Hashtags</label>
            <input type="text" name="hashtags" placeholder="#pop #indie #newartist" class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                          text-white transition-all duration-300
                          focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                          hover:border-gray-600">
          </div>

          <!-- Thumbnail File Upload -->
          <div class="group">
            <label class="block mb-2 text-sm font-medium text-gray-300">Thumbnail Image</label>
            <input type="file" name="thumbnail" accept="image/*" required class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                          text-white file:mr-4 file:py-2 file:px-4
                          file:rounded-full file:border-0
                          file:text-sm file:font-semibold
                          file:bg-gradient-to-r file:from-pink-500 file:to-violet-500
                          file:text-white
                          hover:file:opacity-90
                          transition-all duration-300
                          focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                          hover:border-gray-600">
            <p class="mt-2 text-sm text-gray-400">Upload a thumbnail image (JPG, PNG, WebP, etc.)</p>
          </div>

          <!-- Bio -->
          <div class="group">
            <label class="block mb-2 text-sm font-medium text-gray-300">person's Bio</label>
            <textarea name="bio" rows="5" required class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                             text-white transition-all duration-300
                             focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                             hover:border-gray-600 resize-none"></textarea>
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full py-3 px-6 rounded-lg font-semibold
                       bg-gradient-to-r from-pink-500 to-violet-500
                       hover:opacity-90 transition-all duration-300
                       focus:ring-2 focus:ring-violet-500/20
                       transform hover:scale-[0.99] active:scale-[0.98]">
          Upload person
        </button>
      </form>
    </div>
  </div>
</body>

</html>