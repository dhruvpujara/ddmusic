<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Music</title>
    <link rel="stylesheet" href="/css/output.css">
    <style>
        /* Loader button styles */
        .loader-button {
            position: relative;
        }

        .loader-button .button-text {
            transition: opacity 0.3s ease;
        }

        .loader-button .spinner {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 0.8s linear infinite;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        @keyframes spin {
            to {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        .loader-button.loading .button-text {
            opacity: 0;
        }

        .loader-button.loading .spinner {
            opacity: 1;
        }

        /* Success message fade out animation */
        .fade-out {
            animation: fadeOut 0.5s ease forwards;
            animation-delay: 3s;
        }

        @keyframes fadeOut {
            to {
                opacity: 0;
                transform: translateY(-10px);
            }
        }
    </style>
</head>

<body class="bg-gradient-to-br from-gray-900 via-black to-gray-900 min-h-screen text-white p-4 md:p-8 font-['Poppins']">
    <!-- Home Button -->
    <div class="max-w-4xl mx-auto mb-6">
        <a href="/admin/dashboard" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg font-semibold
                  bg-gradient-to-r from-blue-500 to-cyan-500
                  hover:opacity-90 transition-all duration-300
                  focus:ring-2 focus:ring-cyan-500/20
                  transform hover:scale-[0.98]">
            <i class="fas fa-home"></i>
            Home
        </a>
    </div>

    <!-- Success Message (Only shown when song is passed) -->
    <% if (song) { %>
        <div class="max-w-4xl mx-auto mb-6">
            <div class="bg-gradient-to-r from-green-900/30 to-emerald-900/20 
                    backdrop-blur-lg p-4 md:p-6 rounded-2xl shadow-xl 
                    border border-emerald-700 fade-out">
                <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 mt-1">
                        <i class="fas fa-check-circle text-emerald-400 text-2xl"></i>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-xl font-bold text-emerald-300 mb-2">
                            Song Uploaded Successfully!
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="bg-black/20 p-3 rounded-lg">
                                <p class="text-sm text-gray-300 mb-1">Song Name</p>
                                <p class="font-semibold text-white">
                                    <%= song.name %>
                                </p>
                            </div>
                            <div class="bg-black/20 p-3 rounded-lg">
                                <p class="text-sm text-gray-300 mb-1">Slug</p>
                                <p class="font-semibold text-white">
                                    <%= song.slugName %>
                                </p>
                            </div>
                            <div class="bg-black/20 p-3 rounded-lg">
                                <p class="text-sm text-gray-300 mb-1">Hashtags</p>
                                <p class="font-semibold text-white">
                                    <%= song.hashtags.join(' ') %></p>
                        </div>
                        <div class="bg-black/20 p-3 rounded-lg">
                            <p class="text-sm text-gray-300 mb-1">Upload Time</p>
                            <p class="font-semibold text-white">
                                <%= new Date(song.createdAt).toLocaleString() %>
                            </p>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-emerald-800/50">
                        <a href="<%= song.link %>" target="_blank" 
                           class="inline-flex items-center gap-2 text-emerald-300 hover:text-emerald-200">
                            <i class="fas fa-external-link-alt"></i>
                            View on Cloudinary
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <div class="max-w-4xl mx-auto mb-12">
        <div class="bg-black/40 backdrop-blur-lg p-4 md:p-8 rounded-2xl shadow-xl border border-gray-800">
            <h1 class="text-3xl font-bold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500">
                Upload Song
            </h1>

            <!-- Change form to multipart/form-data for file upload -->
            <form id="uploadForm" action="/admin/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div class="space-y-4">
                    <div class="group">
                        <label class="block mb-2 text-sm font-medium text-gray-300">Song Name</label>
                        <input type="text" name="name" required class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                                      text-white transition-all duration-300
                                      focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                                      hover:border-gray-600">
                    </div>

                    <div class="group">
                        <label class="block mb-2 text-sm font-medium text-gray-300">Song File</label>
                        <div class="relative">
                            <input type="file" name="songFile" accept=".mp3,.wav,.m4a,.flac,.mp4,.mov,.avi" required
                                class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                                          text-white file:mr-4 file:py-2 file:px-4
                                          file:rounded-full file:border-0
                                          file:text-sm file:font-semibold
                                          file:bg-gradient-to-r file:from-pink-500 file:to-violet-500
                                          file:text-white
                                          hover:file:opacity-90
                                          transition-all duration-300
                                          focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                                          hover:border-gray-600">
                        </div>
                        <p class="mt-2 text-sm text-gray-400">Supported formats: MP3, WAV, M4A, FLAC, MP4, MOV, AVI (Max
                            100MB)</p>
                    </div>

                    <div class="group mt-8">
                        <label class="block mb-2 text-sm font-medium text-gray-300">
                            Custom Hashtags (Optional)
                        </label>
                        <input type="text" name="customHashtags"
                            placeholder="Add hashtags separated by spaces (e.g. #myband #specialrelease)" class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                                      text-white transition-all duration-300
                                      focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                                      hover:border-gray-600">
                    </div>
                </div>

                <button type="submit" id="submitButton" class="loader-button w-full py-3 px-6 rounded-lg font-semibold
                               bg-gradient-to-r from-pink-500 to-violet-500
                               hover:opacity-90 transition-all duration-300
                               focus:ring-2 focus:ring-violet-500/20
                               transform hover:scale-[0.99] active:scale-[0.98]
                               disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="button-text">Upload Song</span>
                    <div class="spinner"></div>
                </button>
            </form>
        </div>
    </div>

    <!-- Edit Section -->
    <div class="max-w-4xl mx-auto mt-12">
        <div class="bg-black/40 backdrop-blur-lg p-4 md:p-8 rounded-2xl shadow-xl border border-gray-800">
            <h2 class="text-3xl font-bold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500">
                Edit Existing Song
            </h2>

            <!-- Search Bar -->
            <div class="flex gap-4 mb-8">
                <input type="text" id="searchInput" placeholder="Enter song name to edit..." class="flex-1 p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                              text-white transition-all duration-300
                              focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                              hover:border-gray-600">
                <button onclick="findSong()" class="px-6 py-3 rounded-lg font-semibold min-w-[120px]
                               bg-gradient-to-r from-pink-500 to-violet-500
                               hover:opacity-90 transition-all duration-300
                               focus:ring-2 focus:ring-violet-500/20
                               transform hover:scale-[0.98] active:scale-[0.97]">
                    Find Song
                </button>
            </div>

            <!-- Edit Form -->
            <form id="editForm" class="hidden space-y-6" enctype="multipart/form-data">
                <input type="hidden" id="songId">
                <div class="space-y-4">
                    <div class="group">
                        <label class="block mb-2 text-sm font-medium text-gray-300">Song Name</label>
                        <input type="text" id="editName" class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                                      text-white transition-all duration-300
                                      focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                                      hover:border-gray-600">
                    </div>

                    <div class="group">
                        <label class="block mb-2 text-sm font-medium text-gray-300">Current Song</label>
                        <div id="currentSongInfo" class="p-3 bg-gray-800/30 rounded-lg mb-2">
                            <audio controls class="w-full" id="currentAudioPlayer">
                                <source id="currentAudioSource" src="" type="audio/mp3">
                                Your browser does not support the audio element.
                            </audio>
                            <p id="currentFileName" class="text-sm text-gray-300 mt-2"></p>
                        </div>

                        <label class="block mb-2 text-sm font-medium text-gray-300">Replace Song (Optional)</label>
                        <input type="file" id="editFile" name="songFile" accept=".mp3,.wav,.m4a,.flac,.mp4,.mov,.avi"
                            class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                                      text-white file:mr-4 file:py-2 file:px-4
                                      file:rounded-full file:border-0
                                      file:text-sm file:font-semibold
                                      file:bg-gradient-to-r file:from-pink-500 file:to-violet-500
                                      file:text-white
                                      hover:file:opacity-90
                                      transition-all duration-300
                                      focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                                      hover:border-gray-600">
                        <p class="mt-2 text-sm text-gray-400">Leave empty to keep current file</p>
                    </div>

                    <div class="group mt-8">
                        <label class="block mb-2 text-sm font-medium text-gray-300">Custom Hashtags</label>
                        <input type="text" id="editHashtags" placeholder="Add hashtags separated by spaces" class="w-full p-3 rounded-lg bg-gray-800/50 border border-gray-700 
                                      text-white transition-all duration-300
                                      focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20 focus:outline-none
                                      hover:border-gray-600">
                    </div>
                </div>

                <div class="flex justify-between mt-4">
                    <button type="button" onclick="updateSong()" class="px-6 py-3 rounded-lg font-semibold
                                   bg-gradient-to-r from-green-500 to-teal-500
                                   hover:opacity-90 transition-all duration-300
                                   focus:ring-2 focus:ring-green-500/20
                                   transform hover:scale-[0.98] active:scale-[0.97]">
                        Update Song
                    </button>
                    <button type="button" onclick="deleteSong()" class="px-6 py-3 rounded-lg font-semibold
                                   bg-gradient-to-r from-red-500 to-pink-500
                                   hover:opacity-90 transition-all duration-300
                                   focus:ring-2 focus:ring-red-500/20
                                   transform hover:scale-[0.98] active:scale-[0.97]">
                        Delete Song
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Font Awesome for icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

    <script>
        // Form submission with loader
        document.getElementById(' uploadForm').addEventListener('submit', function (e) {
            const
            submitButton = document.getElementById('submitButton');
            submitButton.classList.add('loading'); submitButton.disabled = true;
        }); async
        function findSong() {
            const name = document.getElementById('searchInput').value;
            try {
                const response = await
                fetch(`/admin/find-song?name=${encodeURIComponent(name)}`); const data = await
                response.json(); if (data.success) {
                    const
                    form = document.getElementById('editForm'); form.classList.remove('hidden');
                    document.getElementById('songId').value = data.song._id;
                    document.getElementById('editName').value = data.song.name;
                    document.getElementById('editHashtags').value = data.song.hashtags.join(' ');

                    // Show current song
                    const audioPlayer = document.getElementById(' currentAudioPlayer'); const
                        audioSource = document.getElementById('currentAudioSource'); const
                            currentFileName = document.getElementById('currentFileName');
                    audioSource.src = data.song.link; audioPlayer.load();
                    currentFileName.textContent = `Current file: ${data.song.name}`;
                } else {
                    alert('Song not found');
                }
            } catch (err) {
                console.error('Error:', err);
                alert('Error finding song');
            }
        } async function updateSong() {
            const
            formData = new FormData(); formData.append('id',
                document.getElementById('songId').value); formData.append('name',
                    document.getElementById('editName').value); formData.append('hashtags',
                        document.getElementById('editHashtags').value); // Add file if selected const
            fileInput = document.getElementById('editFile'); if (fileInput.files[0]) {
                formData.append('songFile', fileInput.files[0]);
            } try {
                const response = await
                    fetch('/admin/update-song', { method: 'POST', body: formData }); const
                        data = await response.json(); if (data.success) {
                            alert('Song updated
                                        successfully'); document.getElementById('editForm').classList.add('hidden');
                                        document.getElementById('searchInput').value = '' ; fileInput.value = ''; // Clear
                                        file input
                        } else {
                            alert('Error updating song: ' + (data.error || ' Unknown
                                        error')); } } catch (err) { console.error('Error: ', err); alert(' Error
                                        updating song'); } } async function deleteSong() { if (!confirm('Are you sure
                                        you want to delete this song ? This action cannot be undone.')) return; const
                                        songId = document.getElementById('songId').value; try {
                        const response = await
                            fetch('/admin/delete-song', {
                                method: 'POST', headers: {
                                    'Content-Type'
                                        : 'application/json',
                                }, body: JSON.stringify({ id: songId })
                            }); const
                                data = await response.json(); if (data.success) {
                                    alert('Song deleted
                                        successfully'); document.getElementById('editForm').classList.add('hidden');
                                        document.getElementById('searchInput').value = '' ;
                                } else {
                                    alert(data.error
                                        || 'Error deleting song');
                        }
                    } catch (err) {
                        console.error('Error:', err);
                        alert('Failed to delete song');
                    }
                } // Auto-hide success message after 3.5
                                        seconds window.addEventListener('DOMContentLoaded', () => {
                    const successMessage = document.querySelector('.fade-out');
                    if (successMessage) {
                        setTimeout(() => {
                            successMessage.style.display = 'none';
                        }, 3500);
                    }
                });
    </script>
</body>

</html>